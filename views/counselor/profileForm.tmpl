{% define "counselor/profileForm.tmpl" %}
{% template "common/header.tmpl" %}

	<div class="container-fluid">
        <form id="profileForm" method="POST">
            <div class="form-group">
                <input type="text" class="form-control" name="id" readonly value="{% .ID %}">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="name" placeholder="姓名">
            </div>
            <div class="form-group">
                <select class="form-control" name="grade" placeholder="年级">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                </select>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="college" placeholder="学院">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="class" placeholder="所带班级">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="phone" placeholder="电话">
            </div>
            <div class="form-group">
                <center><button type="submit" class="btn btn-primary">Submit</button></center>
            </div>
        </form>
	</div>

	<script>
		$(document).ready(function() {
			var	options = {
				success  : ResponseCallback
			}

			$("#profileForm").ajaxForm(options)
		});

		function ResponseCallback(response,status,xhr,$form) {
			if (response.status==1) {
				layer.alert(response.msg, {icon:2})
			}
			if (response.status==0) {
				layer.alert("提交信息成功", {icon:6})
				window.location.href="/auth/1/"+$("#id").val()+"/profile";
			}
		}
	</script>
	
{% template "common/footer.tmpl" %}
{% end %}
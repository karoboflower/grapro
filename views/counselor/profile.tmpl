{% define "counselor/profile.tmpl" %}
{% template "common/header.tmpl" %}

	<div class="container-fluid">
		<div>
			<nav class="navbar navbar-expand-lg bg-dark navbar-dark">
				<h1>{% .info.ID %},欢迎您！</h1>
			</nav>
		</div>
		<div class="row">
			<div class="col-sm-2">
				<ul class="list-group">
					<a href="" class="list-group-item list-group-item-action active">修改信息</a>
					<a href="" class="list-group-item list-group-item-action">国家助学金</a>
					<a href="" class="list-group-item list-group-item-action">国家励志奖学金</a>
					<a href="" class="list-group-item list-group-item-action">应善良助学金</a>
				</ul>
			</div>
			<div class="col-sm-10">
				<form id="profileForm" method="POST">
					<div class="form-group">
						<label for="id">工号:</label>
						<input id="id" class="form-control" name="id" value={% .info.ID %}>
					</div>
					<div class="form-group">
						<label for="name">姓名:</label>
						<input id="name" class="form-control" name="name">
					</div>
					<div class="form-group">
						<label for="college">学院:</label>
						<input id="college" class="form-control" name="college">
					</div>
					<div class="form-group">
						<label for="grade">年级:</label>
						<input id="grade" class="form-control" name="grade">
					</div>
					<div class="form-group">
						<label for="class">班级:</label>
						<input id="class" class="form-control" name="class">
					</div>
					<div class="form-group">
						<label for="phone">电话:</label>
						<input id="phone" class="form-control" name="phone">
					</div>
					<div class="form-group">
						<button type="submit" class="btn btn-primary">Submit</button>
					</div>
				</form>
			</div>
		</div>
		
		
	</div>

	<script>
		$(document).ready(function() {
			var	options = {
				success  : ResponseCallback
			}

			$("#profileForm").ajaxForm(options)
		});

		function ResponseCallback(response,status,xhr,$form) {
			if (response.status==1) {
				layer.alert(response.msg, {icon:2})
			}
			if (response.status==0) {
				layer.alert("提交信息成功", {icon:6})
				window.location.href="/auth/counselor/"+$("#id").val()+"/profile";
			}
		}
	</script>
	
{% template "common/footer.tmpl" %}
{% end %}